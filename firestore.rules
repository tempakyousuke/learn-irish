rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, write: if request.auth.uid == uid;
      match /tunes/{tuneId} {
        allow read, write: if request.auth.uid == uid;
      }
      match /daily/{date} {
        allow read, write: if request.auth.uid == uid;
      }
    }
    match /tunes/{id} {
      allow read: if true;
      allow write: if request.auth.uid == 'dci2JB1vI3VYruel4U6L6q7N0As1';
    }
  }
}